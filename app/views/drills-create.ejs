<form method="POST" class="max-w-md mx-auto">
    <input type="hidden" name="_csrf" value="<%= _csrfToken %>">
    <h1 class="text-xl font-bold mb-4">Додати вправу</h1>
    <div class="mb-4">
        <label class="block text-sm font-medium mb-1" for="name">Назва</label>
        <input class="w-full px-3 py-1 rounded border" type="text" id="name" name="name" required>
    </div>
    <div class="mb-4">
        <label class="block text-sm font-medium mb-1" for="description">Опис</label>
        <textarea class="w-full px-3 py-1 rounded border" id="description" name="description" rows="5"></textarea>
    </div>
    <div class="mb-4">
        <label class="block text-sm font-medium mb-1" for="ammo">Патронів на вправу</label>
        <input class="w-full px-3 py-1 rounded border" type="number" step="0.01" id="ammo" name="ammo" required>
    </div>
    <button class="bg-blue-500 text-white px-4 py-2 mt-4 rounded w-full" type="submit">Створити</button>
</form>
<a href="/drills" class="block text-center text-gray-500 mt-4">Назад до списку</a>
